<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

       <!-- 상단 뒤로가기 레이아웃-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/back_ibtn"
                android:layout_width="42.5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/back" />

            <!-- 설정 메뉴명 -->
            <TextView
                android:id="@+id/menuTitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:text="설정"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- 가로 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/menuTitle_tv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp"
                android:background="#BCBCBC" />

        </RelativeLayout>

        <!--Notifications 레이아웃-->
        <LinearLayout
            android:id="@+id/Setting_page_Notifications"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

        <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textColor="@color/black"
                android:textSize="33dp"
                android:layout_marginLeft="15dp"
                android:textStyle="normal" />

            <Space
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!-- textSize 레이아웃-->
        <LinearLayout
            android:id="@+id/Setting_page_TextSize"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/layout_border_bottom"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextSize"
                android:textColor="@color/black"
                android:textSize="33dp"
                android:layout_marginLeft="15dp"
                android:textStyle="normal" />

            <Space
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- Language 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/Setting_page_Language"
            android:background="@drawable/layout_border_top"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginLeft="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#0584FE"
                android:text="Default" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow"
                android:text="Terms of Use & Policy" />

        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!-- Delete_history-->
        <LinearLayout
            android:id="@+id/Setting_page_Delete_histoty"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/layout_border_bottom"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete app usage history"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:layout_marginLeft="15dp"
            android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>


        <!-- UserPolicy 레이아웃 -->
        <LinearLayout
            android:id="@+id/Setting_page_UserPolicy"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/layout_border_top"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 레이아웃 안에 버튼과 글-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms of Use & Policy"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:layout_marginLeft="15dp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <!-- 가운데 선 구분-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:background="#BCBCBC" />

        <!-- Version 레이아웃-->
        <RelativeLayout
            android:id="@+id/Setting_page_Version"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="  Version"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="8dp"
                android:text="Lastest 1.0.0" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:text="Current 1.0.0" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="10dp"
                android:layout_height="21dp"
                android:layout_alignTop="@+id/textView15"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:layout_toStartOf="@+id/textView16"
                android:layout_toEndOf="@+id/textView17"
                android:gravity="center"
                android:textSize="15dp"
                android:text="/" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>